<% layout('layouts/boilerplate') %>

<body>
  <div class="container mt-4">
    <h2 class="text-center mb-4">All Listings</h2>
   
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
      <% for (let listing of listings) { %>
        <div class="col">
          <div class="card card-listing h-100">
         
            <img src="<%= listing.image%>" class="card-img-top" alt="listing Image" style="height: 12rem; object-fit: cover;">
            <div class="card-body">
              <h5 class="card-title"><%= listing.name %></h5>
              <p class="card-text"><%= listing.location %></p>
              <p class="card-text"><strong>Price:</strong> $<%= listing.price %></p>
              <p class="card-text"><strong>Author:</strong> <%= listing.author.username %></p>
              
         
              <% if (user && (user.role === 'Admin' || user.id === listing.author.id)) { %>
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning btn-sm me-2">Edit</a>
                <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
              <% } %>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>

</body>
